<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center|right|center_vertical"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvDisplay"
        tools:layout_editor_absoluteY="٢٠٣dp">

        <Button
            android:id="@+id/bt7"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="7"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt8"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="8"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt9"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="9"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btDiv"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#818589"
            android:text="/"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        android:layout_height="90dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="٣٠٣dp">

        <Button
            android:id="@+id/bt4"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="4"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt5"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="5"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt6"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="6"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btMultiply"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#818589"
            android:text="*"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/linearLayout2"
        tools:layout_editor_absoluteY="٣٩٣dp">

        <Button
            android:id="@+id/bt1"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="1"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt2"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="2"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt3"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="3"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btMinus"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#818589"
            android:text="-"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linearLayout3"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="٤٨٣dp">

        <Button
            android:id="@+id/btNegative"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="+/-"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt0"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="0"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btDecimal"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="."
            android:textSize="20dp" />

        <Button
            android:id="@+id/btPlus"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#818589"
            android:text="+"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout4"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="٥٨٣dp">

        <Button
            android:id="@+id/btDel"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="del"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btClear"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="c"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btEquals"
            android:layout_width="190dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="#818589"
            android:text="="
            android:textSize="20dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>